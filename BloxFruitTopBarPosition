-- Script Indonesian Position
local allowed = {
    [2753915549] = true, -- Sea 1
    [4442272183] = true, -- Sea 2
    [7449423635] = true, -- Sea 3
    [73902483975735] = true -- Dungeons
}

if not allowed[game.PlaceId] then return end

local lp = game:GetService("Players").LocalPlayer
local pg = lp:WaitForChild("PlayerGui")

pcall(function()
    pg.TopBarMenuExxHub.Frame.Position = UDim2.new(0, 115, 0, 60)
    pg.TopBarMenuExxHub.TextButton.Position = UDim2.new(0, 170, 0, 12)

    pg.TopBarServerHOPUI.ToggleButton.Position = UDim2.new(0, 999, 0, 12)
    pg.TopBarServerHOPUI.Frame.Position = UDim2.new(0, 999, 0, 60)
end)

